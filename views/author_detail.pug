extends layout

block content
    h1 Author: #{author.name}

    p #{author.lifespan}

    div(style='margin-left:30px;margin-top:20px')

        h4 Book(s)

        hr

        each book in author_books
            p
                a(href=book.url) #{book.title}
                br
                | #{book.summary}

        else
            p This author has no books in this library 